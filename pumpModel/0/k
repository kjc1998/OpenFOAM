FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 3.85e-5;

boundaryField
{
    rotatingAMI1
    {
        type            cyclicAMI;
        value           $internalField;
    }
    rotatingAMI2
    {
        type            cyclicAMI;
        value           $internalField;
    }
    inlet
    {
        type            turbulentIntensityKineticEnergyInlet;
        intensity	    0.05; // 5% turbulence
        value		    $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    housing
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    impeller
    {
        type            kqRWallFunction;
        value           $internalField;
    }
    cover
    {
        type            kqRWallFunction;
        value           $internalField;
    }
}


// ************************************************************************* //
